{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/pipex_bonus",
			"args": ["tst/main.c", "ls .", "wc -w", "tst/out.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [{"name":"PATH", "value":"${env:PATH}"}],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-gdb-set follow-fork-mode child",// -enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "C/C++: make with cc the project"
		},
		{
			"name": "clang - Build and debug active file",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/pipex",
			"args": ["f1", "ls .", "wc -w", "f2"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [{"name":"PATH", "value":"${env:PATH}"}],
			"externalConsole": false,
			"MIMode": "lldb",
			"preLaunchTask": "C/C++: make with cc the project"
		}
	]
}
